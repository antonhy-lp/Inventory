<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_actualizar_productos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:onClick="onClick"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ActualizarProductos">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="ACTUALIZAR DATOS DE PRODUCTO"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/campoIsPais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.93"
            android:hint="Código de Barras: " />

        <Button
            android:id="@+id/btnConsultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_marginVertical="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/ic_launcher_background"
            android:onClick="onClick"
            android:text="@string/btnsc"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnbuscar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:background="@color/ic_launcher_background"
            android:onClick="Buscar"
            android:scaleX="1"
            android:text="@string/btnbusqueda" />


    </LinearLayout>

    <EditText
        android:id="@+id/campoNombrePais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de Producto:" />

    <EditText
        android:id="@+id/campoObservacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad: " />

    <EditText
        android:id="@+id/campoCantidadMinima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad Mínima:" />

    <EditText
        android:id="@+id/campoPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio:" />

    <EditText
        android:id="@+id/campoDetalleProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Detalle de Producto:" />

    <Spinner
        android:id="@+id/comboCategoriaAP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnActualizarPais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:background="@color/ic_launcher_background"
            android:onClick="onClick"
            android:text="Actualizar"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="0.5"
            android:background="@color/ic_launcher_background"
            android:onClick="onClick"
            android:text="Eliminar"
            android:textColor="#000000" />

    </LinearLayout>


</LinearLayout>